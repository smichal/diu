 ["src"]

 :dependencies
 [[org.clojure/clojurescript "1.10.439"]

  [io.replikativ/hasch "0.3.5"]
  [org.clojure/core.async  "0.4.474"]
  [cider/cider-nrepl "0.18.0"]
  [binaryage/devtools "0.9.10"]
  [com.rpl/specter "1.1.2"]
  [datascript "0.16.7"]
