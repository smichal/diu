  [mount "0.1.15"]

  [org.clojure/test.check "0.10.0-alpha3"]

  ]

 :builds
 {:app {:target :browser
        :output-dir "public/js"
        :asset-path "/js"
        :modules
        {:main ;; <- becomes public/js/main.js
         {:entries [app.main]}}
        :devtools
        {:http-root "public"
         :http-port 8020}
        }
  :app1 {:target :browser
        :output-dir "public/js"
        :asset-path "/js"
        :modules
        {:main ;; <- becomes public/js/main.js
         {:entries [core.idom]}
         :worker
         {                                                  ;:entries [core.idom]
          :depends-on #{:main}
          :web-worker true}}
        :devtools
        {:http-root "public"
         :http-port 8021}
        }
  :my-tests
   {:target :browser-test
    :test-dir "out/demo-test-dummy"
    :ns-regexp "incr"
    :devtools
    {:http-port 8606
     :http-root "out/demo-test-dummy"}}
  }}

