 :dev-http {8020 "public/"}
 :builds
 {:app {:target :browser
        :output-dir "public/js"
        :asset-path "/js"
        :modules
        {:shared {}
         :browser {:entries [runtime.browser] :depends-on #{:shared}}
         :worker {:entries [runtime.worker] :depends-on #{:shared} :web-worker true}}
        ;:devtools
        #_{:http-root "public"
         :http-port 8020}
        :js-options
        {:resolve {"golden-layout" {:target :global
                                    :global "GoldenLayout"}}}
        }
  :app1 {:target :browser
        :output-dir "public/js"
        :asset-path "/js"
        :modules
         ;; <- becomes public/js/main.js
        {:main {:entries [core.idom]}
         :worker {:depends-on #{:main} :web-worker true}}
        :devtools
        {:http-root "public"
         :http-port 8021}
        }
  :tests
   {:target :browser-test
    :test-dir "out/demo-test-dummy"
    :ns-regexp "tests$"
    :devtools
    {:http-port 8606
     :http-root "out/demo-test-dummy"}}
  }}

